<?xml version="1.0" encoding="utf-8"?>

<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/recipe_info_row_style"
    android:id="@+id/recInfoRow"
    android:accessibilityTraversalAfter="0"
    android:baselineAligned="false"
    android:measureWithLargestChild="true">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/recInfoTitle"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:onClick="openRecipeActivity" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Super sočan kolač sa grožđicama gluposti"
            android:id="@+id/recInfoDescription"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_below="@+id/recInfoTitle"
            android:layout_alignParentStart="true" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/recInfoRating"
            android:isIndicator="true"
            android:scaleX="0.60"
            android:scaleY="0.60"
            android:transformPivotX="0dp"
            android:transformPivotY="25dp"
            android:layout_below="@+id/recInfoDescription"
            android:layout_alignStart="@+id/recInfoDescription" />
    </RelativeLayout>
</TableRow>
